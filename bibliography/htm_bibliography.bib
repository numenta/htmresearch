issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Animals,Fixation,Macaca mulatta,Macaca mulatta: physiology,Neurons,Neurons: cytology,Neurons: physiology,Ocular,Ocular: physiology,Photic Stimulation,Saccades,Saccades: physiology,Sensorimotor Inference,Visual Cortex,Visual Cortex: cytology,Visual Cortex: physiology,Visual Perception,Visual Perception: physiology},
mendeley-tags = {Sensorimotor Inference},
month = mar,
number = {6},
pages = {4026--31},
pmid = {11904446},
title = {{Updating of the visual representation in monkey striate and extrastriate cortex during saccades.}},
